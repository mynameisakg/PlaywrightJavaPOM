<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Open Cart Regression PW Suite" thread-count="6" parallel='tests'
	verbose="4">

	<listeners>
		<listener class-name="com.qa.opencart.listeners.ExtentReportListener" />
	</listeners>

	<test name="Open Cart Home Page Test_chromium">
		<parameter name="browser" value="chromium"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.HomePageTest" />
		</classes>
	</test>

	<test name="Open Cart Login Page Test_chromium">
		<parameter name="browser" value="chromium"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>
	
	
	<test name="Open Cart Home Page Test_firefox">
		<parameter name="browser" value="firefox"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.HomePageTest" />
		</classes>
	</test>

	<test name="Open Cart Login Page Test_firefox">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>

</suite>
